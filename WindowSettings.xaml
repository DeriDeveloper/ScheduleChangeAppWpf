<Window x:Class="ScheduleChangeAppWpf.WindowSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleChangeAppWpf"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Настройки" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="Главное меню" Click="ShowMainMenuWindow_Click"/>
            </Menu>
            <ScrollViewer>
                <StackPanel>
                    <Label Content="Тип сервера"/>
                    <CheckBox x:Name="TypeServerCheckBox" Content="Удаленный" Checked="TypeServerCheckBox_Checked" Unchecked="TypeServerCheckBox_Unchecked"/>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
